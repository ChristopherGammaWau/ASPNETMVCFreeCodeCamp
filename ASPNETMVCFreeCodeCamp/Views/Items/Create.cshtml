@model ASPNETMVCFreeCodeCamp.ViewModels.CreateViewModel

@{
    ViewData["Title"] = "Create Item";
}

<!DOCTYPE html>

<html>
<head>
    <title>@ViewData["Title"]</title>
</head>
<body>
<div>
    <form asp-action="Create" method="post">
        <div>
            <label for="Name">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Item.Name"/>
        </div>
        <div>
            <label for="Price">Price</label>
            <input type="number" class="form-control" asp-for="@Model.Item.Price"/>
        </div>
        <div>
            <label for="CategoryId">Category</label>
            <select asp-for="@Model.Item.CategoryId" asp-items="@Model._categoryList"></select>
        </div>
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
</div>
</body>
</html>